# Application Settings
APP_NAME="File Organizer API"
APP_VERSION="1.0.0"
DEBUG=true
API_V1_PREFIX="/api/v1"

# Server Settings
HOST=0.0.0.0
PORT=8000

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Database Settings
DATABASE_URL="sqlite:///./file_organizer.db"

# File System Settings
# Allowed base directories for file operations (comma-separated)
ALLOWED_BASE_PATHS="/home/user/Downloads,/home/user/Documents"
# Maximum file size for preview (in bytes, default 10MB)
MAX_PREVIEW_SIZE=10485760
# Thumbnail size
THUMBNAIL_SIZE=200

# Scheduler Settings
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE="UTC"

# Logging
LOG_LEVEL="INFO"
LOG_FILE="logs/app.log"
